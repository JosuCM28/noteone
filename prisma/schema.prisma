generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int        @id @default(autoincrement())
  name            String
  username        String     @unique
  email           String?    @unique
  emailVerified   Boolean?   @default(false)
  image           String?
  rol             UserRole
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  sessions        Session[]
  accounts        Account[]
  auditLogs       AuditLog[]
  deeds           Deed[]
  displayUsername String?

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  accountId             String
  providerId            String
  userId                Int
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Deed {
  id            Int           @id @default(autoincrement())
  type          String
  folio         String
  deedNumber    String
  signatureDate DateTime?
  notes         String?
  participants  Participant[]
  baseValue     Decimal       @db.Decimal(12, 2)
  propertyTax   Decimal       @db.Decimal(12, 2)
  estimated     Decimal       @db.Decimal(12, 2)
  status        DeedStatus    @default(por_liquidar)
  userId        Int
  user          User          @relation(fields: [userId], references: [id], onDelete: Restrict)
  auditLogs     AuditLog[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([userId, folio])
  @@unique([userId, deedNumber])
  @@index([userId, status])
  @@index([signatureDate])
  @@map("deed")
}

model Participant {
  id        Int             @id @default(autoincrement())
  name      String
  phone     String?
  deedId    Int
  role      ParticipantRole
  deed      Deed            @relation(fields: [deedId], references: [id], onDelete: Cascade)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([deedId])
  @@unique([deedId, name])
  @@map("participante")
}

model AuditLog {
  id          Int       @id @default(autoincrement())
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  deedId      Int?
  deed        Deed?     @relation(fields: [deedId], references: [id], onDelete: SetNull)
  action      AuditAction
  details     String?
  deedFolio   String?
  deedNumber  String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
  deletedById Int?
  changes Json?

  @@index([deedId, createdAt])
  @@index([userId, createdAt])
  @@map("audit_log")
}

enum UserRole {
  ADMIN
  OPERATOR
}

enum ParticipantRole {
  Testador
  Comprador
  Donante
  Acreedor
  Deudor
  Otorgante
  Apoderado
  Representante
  Participante
  Solicitante
  Causante
  Administrador
  Heredero
  Propietario
}

enum DeedStatus {
  por_liquidar
  liquidado
  proceso_pago
  registro
  proceso_entrega
  entregado
  cancelado
}

enum AuditAction {
  CREATE
  UPDATE
  STATUS_CHANGE
  DELETE
  NOTE_CHANGE
}
